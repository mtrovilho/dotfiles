set nocompatible
syntax on

" prevent some security exploits
" http://lists.alioth.debian.org/pipermail/pkg-vim-maintainers/2007-June/004020.html
set modelines=0

" Handle multiple buffers better.
set hidden

" Highlight cursor line
"set cursorline
" Show line numbers…
"set number
" …but relative
set relativenumber

" Indenting Options
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
